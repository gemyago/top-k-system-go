{
  "defaultLogLevel": "INFO",
  "jsonLogs": true,
  "gracefulShutdownTimeout": "10s",
  "httpServer": {
    "port": 8080,
    "idleTimeout": "60s",
    "readHeaderTimeout": "2s",
    "readTimeout": "2s",
    "writeTimeout": "8s"
  },
  "kafka": {
    "address": "localhost:29092",
    "itemEventsTopic": "item-events",
    "allowAutoTopicCreation": false,
    "readerMaxWait": "10s",
    "writeTimeout": "10s",
    "maxWriteAttempts": 10
  },
  "aggregator": {
    "flushInterval": "60s",
    "verbose": false,
    "itemEventLogRate": 10000
  },
  "blobstorage": {
    "localFolder": "tmp/blobs"
  }
}